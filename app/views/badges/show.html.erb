
<label class="label"><%= t("activerecord.attributes.badge.name", :default => t("activerecord.labels.name", :default => "Name")) %>:</label>
<p><%= @badge.name %></p>

<label class="label"><%= t("activerecord.attributes.badge.point", :default => t("activerecord.labels.point", :default => "Point")) %>:</label>
<p><%= @badge.point %></p>

<label class="label"><%= t("activerecord.attributes.badge.description", :default => t("activerecord.labels.description", :default => "Description")) %>:</label>
<p><%= @badge.description %></p>

<label class="label"><%= t("activerecord.attributes.badge.image_url", :default => t("activerecord.labels.image_url", :default => "Image url")) %>:</label>
<p><%= @badge.image_url %></p>

<div class="form-actions">
<%= link_to "Back", badges_path, :class => 'btn'  %>
<%= link_to "Edit", edit_badge_path(@badge), :class => 'btn' %>
<%= link_to "Delete", badge_path(@badge), :method => "delete", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}", :class => 'btn' %>
</div>
