
<label class="label"><%= t("activerecord.attributes.person.name", :default => t("activerecord.labels.name", :default => "Name")) %>:</label>
<p><%= image_tag(@person.image_url) %></p>
<p><%= @person.name %></p>

<label class="label"><%= t("activerecord.attributes.person.description", :default => t("activerecord.labels.description", :default => "Description")) %>:</label>
<p><%= @person.description %></p>

<label class="label"><%= t("activerecord.attributes.person.email", :default => t("activerecord.labels.email", :default => "Email")) %>:</label>
<p><%= @person.email %></p>

<div class="form-actions">
<%= link_to "Back", people_path, :class => 'btn'  %>
<% if current_person and current_person.id == @person.id %>
<%= link_to "Edit", edit_person_path(@person), :class => 'btn' %>
<% end %>
