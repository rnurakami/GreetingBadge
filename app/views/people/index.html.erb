<h1>Members</h1>
<table class="table table-striped">
 <thead>
  <tr>
    <th></th>
    <th>名前</th>
    <th>自己紹介</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
 
 <% @people.each do |person| -%>
   <tr>
    <td><%= image_tag(person.image_url) %></td>
        <td><%= link_to person.name, person_path(person) %>
    </td>
        <td><%= person.description %></td>
    <td>
      <%= link_to "Show", person_path(person) %>
      <% if current_person.id = person.id %>
      <%= link_to "Edit", edit_person_path(person) %>
      <% end %>
    </td>
    </tr>
    <% end -%>
   </tbody>
</table>
